# MindCanvas Frontend Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3

# Authentication
VITE_USER_ID=frontend_user

# AI Service Configuration
VITE_USE_MOCK_AI=false
VITE_MOCK_DELAY_MIN=1000
VITE_MOCK_DELAY_MAX=3000
VITE_MOCK_ERROR_RATE=0.05

# Backend Integration
VITE_ENABLE_BACKEND=true
VITE_ENABLE_BACKEND_SYNC=true
VITE_SYNC_INTERVAL=30000
VITE_HEALTH_CHECK_INTERVAL=30000

# Development Features
VITE_ENABLE_AI_DEMO=true
VITE_SHOW_SERVICE_STATUS=true

# Configuration Examples:
# For development with backend: VITE_USE_MOCK_AI=false VITE_API_URL=http://localhost:8000
# For development without backend: VITE_USE_MOCK_AI=true
# For production: VITE_USE_MOCK_AI=false VITE_API_URL=https://your-api-domain.com